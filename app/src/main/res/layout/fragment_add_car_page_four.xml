<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg_full"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@drawable/whiteradius"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload OR/CR"
            android:textColor="#20639B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Official Receipt"
                android:textAllCaps="true"
                android:textColor="@color/endblue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/etAmount"
                />

            <HorizontalScrollView
                android:id="@+id/horScrollView1"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/apic1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/textView11"
                        android:clickable="true"
                        android:src="@drawable/add_pic" />

                    />

                    />

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btnUploadOR"
                android:layout_height="wrap_content"
                android:text="Upload Official Reciept"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                android:background="@drawable/login_button"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certificate of Registration"
                android:textAllCaps="true"
                android:textColor="@color/endblue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/etAmount"
                />

            <HorizontalScrollView
                android:id="@+id/horScrollView2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/bpic1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:clickable="true"
                        android:src="@drawable/add_pic" />


                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btnUploadCR"
                android:layout_height="wrap_content"
                android:text="Upload Certificate of Registration"
                android:textColor="@color/white"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_margin="20dp"
                android:background="@drawable/login_button"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnNext"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/white"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/login_button"
            android:layout_gravity="center"/>


    </LinearLayout>
    </LinearLayout>

</ScrollView>