<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/slide_image"
            android:layout_width="146dp"
            android:layout_height="146dp"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/slide_heading"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noodles"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/slide_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Lorem ipsum keme kemeLorem ipsum keme kemeLorem ipsum keme kemeLorem ipsum keme kemeLorem ipsum keme kemeLorem ipsum keme keme"
            android:layout_margin="40dp"
            android:textSize="19dp"
            android:textAlignment="center"/>






    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>