<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/profile_full_bg"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Car Brand"
                    android:textAllCaps="true"
                    android:textColor="@color/endblue"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/SpinnerFeedbackType"
                    android:prompt="@array/car_brand"
                    android:layout_width="250dp"
                    android:gravity="center"
                    android:entries="@array/car_brand"
                    android:background="@drawable/textbox_border"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_below="@+id/textView1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Select Model"
                        android:textAllCaps="true"
                        android:textColor="@color/endblue"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <Spinner
                        android:id="@+id/ModelSpinner"
                        android:prompt="@array/car_brand"
                        android:entries="@array/car_brand"
                        android:gravity="center_vertical"
                        android:layout_width="100dp"
                        android:background="@drawable/textbox_border"
                        android:layout_height="55dp"
                        android:padding="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Select Color"
                        android:textAllCaps="true"
                        android:textColor="@color/endblue"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                    <Spinner
                        android:id="@+id/ColorSpinner"
                        android:entries="@array/car_color"
                        android:prompt="@array/car_color"
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:background="@drawable/textbox_border"
                        android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Year"
                        android:textAllCaps="true"
                        android:textColor="@color/endblue"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/YearSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:background="@drawable/textbox_border"
                        android:entries="@array/car_year"
                        android:padding="10dp"
                        android:prompt="@array/car_year" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plate Number"
                    android:textAllCaps="true"
                    android:textColor="@color/endblue"
                    android:textStyle="bold"
                    />

                a<EditText
                    android:id="@+id/etPlateNumber"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbox_border"
                    android:hint="Plate Number"
                    android:textAllCaps="true"
                    android:padding="19dp"
                    android:layout_below="@+id/textView3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chassis Number"
                    android:textAllCaps="true"
                    android:textColor="@color/endblue"
                    android:textStyle="bold"
                    android:layout_below="@+id/etPlateNumber"
                    />

                <EditText
                    android:id="@+id/etChassisNumber"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Chassis Number"
                    android:textAllCaps="true"
                    android:padding="19dp"
                    android:background="@drawable/textbox_border"
                    android:inputType="number"
                    android:layout_below="@+id/textView4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Return Location"
                    android:textAllCaps="true"
                    android:textColor="@color/endblue"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/TF_LOCATION"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/TF_LOCATION2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:layout_below="@+id/textView6"/>

                    <Button
                        android:id="@+id/B_search2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:text="Search"
                        android:textColor="@android:color/white"
                        android:background="@drawable/login_button"
                        android:layout_below="@+id/textView6"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Pick up Location"
                    android:textAllCaps="true"
                    android:textColor="@color/endblue"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/etChassisNumber"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/TF_LOCATION"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:layout_below="@+id/textView5"/>

                    <Button
                        android:id="@+id/B_search"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Search"
                        android:layout_gravity="end"
                        android:textColor="@android:color/white"
                        android:background="@drawable/login_button"
                        android:layout_below="@+id/textView5"/>
                </LinearLayout>
            </LinearLayout>
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"

                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map_car"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                tools:context=".MapsActivity"
                android:layout_below="@+id/TF_LOCATION2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Service Type"
                        android:textAllCaps="true"
                        android:textColor="@color/endblue"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <Spinner
                        android:id="@+id/serviceSpinner"
                        android:prompt="@array/service_type"
                        android:layout_width="150dp"
                        android:entries="@array/service_type"
                        android:background="@drawable/textbox_border"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_below="@+id/textView9"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Per Day"
                        android:textAllCaps="true"
                        android:textColor="@color/endblue"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/map_car"
                        />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:background="@drawable/textbox_border"
                        android:inputType="number"
                        android:paddingLeft="19dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Upload Pictures"
                    android:textAllCaps="true"
                    android:textColor="@color/endblue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/etAmount"
                    />

                <HorizontalScrollView
                    android:id="@+id/horScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/pic1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_below="@+id/textView11"
                            android:clickable="true"
                            android:src="@drawable/add_pic" />

                        <ImageView
                            android:id="@+id/pic2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_below="@+id/textView11"
                            android:layout_marginLeft="20dp"
                            android:clickable="true"
                            android:src="@drawable/add_pic" />

                        <ImageView
                            android:id="@+id/pic3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_below="@+id/textView11"
                            android:layout_marginLeft="20dp"
                            android:clickable="true"
                            android:src="@drawable/add_pic" />

                        <ImageView
                            android:id="@+id/pic4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="20dp"
                            android:clickable="true"
                            android:src="@drawable/add_pic" />

                        <ImageView
                            android:id="@+id/pic5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_below="@+id/textView11"
                            android:layout_marginLeft="20dp"
                            android:clickable="true"
                            android:src="@drawable/add_pic" />

                        <ImageView
                            android:id="@+id/pic6"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_below="@+id/textView11"
                            android:layout_marginLeft="20dp"
                            android:clickable="true"
                            android:src="@drawable/add_pic" />

                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>
            <Button
                android:id="@+id/btnAddCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Add Car"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>