<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg_full"
    android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/whiteradius"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Details"
                android:textColor="#20639B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Car Brand"
                            android:textAllCaps="true"
                            android:textColor="@color/endblue"
                            android:textStyle="bold" />
                        <Spinner
                            android:id="@+id/SpinnerFeedbackType"
                            android:prompt="@array/car_brand"
                            android:layout_width="150dp"
                            android:gravity="center"
                            android:entries="@array/car_brand"
                            android:background="@drawable/textbox_border"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:layout_below="@+id/textView1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Year"
                            android:textAllCaps="true"
                            android:textColor="@color/endblue"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/YearSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textbox_border"
                            android:entries="@array/car_year"
                            android:padding="10dp"
                            android:prompt="@array/car_year" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Select Model"
                            android:textAllCaps="true"
                            android:textColor="@color/endblue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            />

                        <Spinner
                            android:id="@+id/ModelSpinner"
                            android:prompt="@array/car_brand"
                            android:entries="@array/car_brand"
                            android:gravity="center_vertical"
                            android:layout_width="100dp"
                            android:background="@drawable/textbox_border"
                            android:layout_height="55dp"
                            android:padding="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Select Color"
                            android:textAllCaps="true"
                            android:textColor="@color/endblue"
                            android:textSize="13sp"
                            android:textStyle="bold"/>
                        <Spinner
                            android:id="@+id/ColorSpinner"
                            android:entries="@array/car_color"
                            android:prompt="@array/car_color"
                            android:layout_width="100dp"
                            android:layout_height="55dp"
                            android:background="@drawable/textbox_border"
                            android:padding="10dp"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plate Number"
                        android:textAllCaps="true"
                        android:textColor="@color/endblue"
                        android:textStyle="bold"
                        />

                    a<EditText
                    android:id="@+id/etPlateNumber"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbox_border"
                    android:hint="Plate Number"
                    android:textAllCaps="true"
                    android:padding="19dp"
                    android:layout_below="@+id/textView3"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chassis Number"
                        android:textAllCaps="true"
                        android:textColor="@color/endblue"
                        android:textStyle="bold"
                        android:layout_below="@+id/etPlateNumber"
                        />

                    <EditText
                        android:id="@+id/etChassisNumber"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="Chassis Number"
                        android:textAllCaps="true"
                        android:padding="19dp"
                        android:background="@drawable/textbox_border"
                        android:inputType="number"
                        android:layout_below="@+id/textView4"
                        />
                </LinearLayout>
                <Button
                    android:layout_width="200dp"
                    android:id="@+id/btnNext"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_button"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>